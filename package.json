{
    "name": "globetrotter-va",
    "version": "1.0.0",
    "description": "GlobeTrotter - A planner-first multi-city travel planning application with Django backend",
    "private": true,
    "workspaces": [
        "client"
    ],
    "scripts": {
        "dev:client": "npm run dev --workspace=client",
        "dev:backend": "cd backend && source venv/bin/activate && python manage.py runserver 8000",
        "setup:backend": "cd backend && chmod +x setup.sh && ./setup.sh",
        "build:client": "npm run build --workspace=client",
        "lint": "npm run lint --workspace=client"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0",
        "python": ">=3.10.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/VIsHnu1762/GlobeTrotter_VA.git"
    },
    "keywords": [
        "travel",
        "planner",
        "itinerary",
        "budget",
        "multi-city",
        "trip"
    ],
    "author": "Vishnu",
    "license": "MIT"
}